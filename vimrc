call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

set nocompatible
set nobackup          
set writebackup       
set number            " Show numbers on the left of each line
colorscheme zenburn

syntax on
set showcmd
set autoindent
set smartindent

set guifont=Inconsolata:h22

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

let mapleader=","	" change the mapleader from \ to ,
set hidden
